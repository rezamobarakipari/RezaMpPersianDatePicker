@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h3>تست کامپوننت تقویم</h3>

<div style="border: 2px solid #ccc; padding: 20px; margin: 20px;">
    <h4>تست ۱: کامپوننت ساده</h4>
    <RmpPersianDatePickerBase @bind-Value="TestDate1" 
                             Placeholder="تاریخ را انتخاب کنید" />
    <p>مقدار: @TestDate1</p>
</div>

<div style="border: 2px solid #ccc; padding: 20px; margin: 20px;">
    <h4>تست ۲: کامپوننت با آیکون</h4>
    <RmpPersianDatePickerBase @bind-Value="TestDate2" 
                             
                             Placeholder="تاریخ با آیکون" />
    <p>مقدار: @TestDate2</p>
</div>

<div style="border: 2px solid #ccc; padding: 20px; margin: 20px;">
    <h4>تست ۳: کامپوننت بدون آیکون</h4>
    <RmpPersianDatePickerBase @bind-Value="TestDate3" 
                            
                             Placeholder="تاریخ بدون آیکون" />
    <p>مقدار: @TestDate3</p>
</div>

<TestComponent></TestComponent>
@code {
    private string TestDate1 = "";
    private string TestDate2 = "";
    private string TestDate3 = "";
}