@page "/"
@using RmpPersianDatePicker
@rendermode InteractiveServer
<h3>دموی انتخاب تاریخ - رضا مبارکی پری</h3>

<div style="display:flex; gap:40px; align-items:flex-start;">
    <!-- فرم تنظیمات -->
    <div style="padding:15px; border-radius:8px; background:#f5f5f5; min-width:220px;">
        <h4>تنظیمات</h4>
        <div>
            <label>Theme</label>
            <select @bind="CurrentTheme">
                @foreach (var t in Enum.GetValues<DatePickerTheme>())
                {
                    <option value="@t">@t</option>
                }
            </select>
        </div>
        <div style="margin-top:10px;">
            <label>Size</label>
            <select @bind="CurrentSize">
                @foreach (var s in Enum.GetValues<DatePickerSize>())
                {
                    <option value="@s">@s</option>
                }
            </select>
        </div>
        <div style="margin-top:10px;">
            <input type="checkbox" @bind="PopupMode" /> <b>Popup Mode</b>
        </div>
    </div>

    <!-- نمایش DatePicker -->
    <div>
        <RmpPersianDatePicker @ref="DatePicker"
                                  Theme="@CurrentTheme"
                                  Size="@CurrentSize"
                                  PopupMode="@PopupMode"
                                  @bind-Value="SelectedDate" />
        <p style="margin-top:10px;"><b>مقدار انتخاب شده:</b> @SelectedDate</p>
    </div>
</div>

@code {
    private RmpPersianDatePicker? DatePicker;

    private string? SelectedDate;

    private DatePickerTheme CurrentTheme { get; set; } = DatePickerTheme.Metro;
    private DatePickerSize CurrentSize { get; set; } = DatePickerSize.Medium;
    private bool PopupMode { get; set; } = true;
}
